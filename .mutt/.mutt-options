set index_format="%4C %Z %[!%b %d %Y %H:%M] %-17.17F (%3l) %s"
set use_from=yes
set smart_wrap = yes

set sort = threads 
set sort_aux = reverse-last-date-received

# Postponed mail goes to the Exchange Drafts folder
set postponed="=Drafts"

# Sent mail goes to the Exchange Sent Items folder
set record="=Sent Items"

# Use a signature file:
#set signature="~/.signature"

# Lastly, tell Mutt to interpret text/html emails by default
# for easier reading.  This is purely optional
auto_view text/html

set ssl_starttls=yes

# HTML

auto_view text/html

# Sidebar
set sidebar_delim   = "â”‚"
set sidebar_visible = yes
set sidebar_width   = 20
set sidebar_sort = yes
set sidebar_shortpath=yes
color sidebar_new yellow default

# Sidebar keys

bind index \CK sidebar-prev
bind index \CJ sidebar-next
bind index \CL sidebar-open
